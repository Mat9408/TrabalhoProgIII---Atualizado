@model SportsECommerce.Models.Produto

@{
    ViewData["Title"] = "Detalhes do produto";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoNome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutoNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoModelo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutoModelo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProdutoPreco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutoPreco)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.ProdutoID }) |
    <a asp-action="Index">Retornar a lista de produtos</a>
</div>
